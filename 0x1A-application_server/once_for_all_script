# Setting up application server
sudo apt-get update
sudo apt-get install -y nginx

# installing pip package
sudo apt-get install -y python3-pip

# installing python flask and sql alchemy for database
pip install flask
pip install flask_cors
pip install sqlalchemy

# installing the net tools
sudo apt install -y net-tools

# installing GUNICORN
sudo apt install -y gunicorn

# if any AirBnB repo exist remove
rm -rf AirBnB_clone_v*

# cloning AirBnB repos
git clone https://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@github.com/Adeniji-Rahmon-Olusegun/AirBnB_clone_v2
git clone https://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@github.com/Adeniji-Rahmon-Olusegun/AirBnB_clone_v3
git clone https://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@github.com/Adeniji-Rahmon-Olusegun/AirBnB_clone_v4

# cd into version 2 repos
cd AirBnB_clone_v2

# checking out of main branch
git checkout Application_Server

# path to the nginx configuration file to be overwritten
NGINX_CONFIG="/etc/nginx/sites-enabled/default"

# replace the Nginx configuration file with the provided configuration
sudo tee "$NGINX_CONFIG" > /dev/null <<EOF
server {
    listen 80 default_server;

    listen [::]:80 default_server;
    root /var/www/html;
    index index.html index.htm index.nginx-debian.html;
    server_name _;
    add_header X-Served-By \$hostname;
    location /hbnb_static { 
        alias /data/web_static/current/;
    }
    location /static/ {
        alias /home/ubuntu/AirBnB_clone_v4/web_dynamic/static/;
        try_files \$uri \$uri/ =404;
    }
    location / {
        proxy_pass http://0.0.0.0:5003;
    }
    location /airbnb-onepage {
        proxy_pass http://0.0.0.0:5000/airbnb-onepage;
    }
    location ~ ^/airbnb-dynamic/number_odd_or_even/([0-9]+)$ {
        proxy_pass http://0.0.0.0:5001/number_odd_or_even/\$1;
    }
    location /api/ {
        proxy_pass http://0.0.0.0:5002;
    }
    if (\$request_filename ~ redirect_me){
        rewrite ^ https://th3-gr00t.tk/ permanent;
    }
    error_page 404 /error_404.html;
    location = /error_404.html {
        internal;
    }
}
EOF

# restart nginx to apply the changes
sudo systemctl restart nginx

echo "Nginx configuration has been successfully updated."

# setting up tmux session 
cd /home/ubuntu/AirBnB_clone_v3
tmux new-session -d 'gunicorn --bind 0.0.0.0:5002 api.v1.app:app'

# Setup tmux session for task 5
cd /home/ubuntu/AirBnB_clone_v4
git checkout Application_Server
